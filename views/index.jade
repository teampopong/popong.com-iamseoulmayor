div#container.rounded-corner5
  div#container2
    div#members
      div#logo
        // logo
        div#logo-img-wrapper
          h2 2014
          img#logo-img(src='images/naseoul_logo.png')

      div.leftcolumn
        //img.photo.small.rounded-corner5(src='images/100115495.jpg')
        div.name 정몽준
          a(href='http://www.mjchung.com/', target='_blank', title='공식사이트')
            img.icon(src='images/home-16x16.png')
          a(href='http://twitter.com/ourmj', target='_blank', title='공식 트위터')
            img.icon(src='images/twitter-16x16.png')

      div.rightcolumn
        //img.photo.small.rounded-corner5(src='images/100115591.jpg')
        div.name 박원순
          a(href='http://wonsoon.com/', target='_blank', title='공식사이트')
            img.icon(src='images/home-16x16.png')
          a(href='http://twitter.com/wonsoonpark', target='_blank', title='공식 트위터')
            img.icon(src='images/twitter-16x16.png')
      div.clear

    div#spaceholder(style='height:112px') &nbsp;

    div#profiles
      div.leftcolumn
        div.caption 프로필

      div.rightcolumn
        div.caption 프로필
      div.clear
      include profiles

    div#statements
      div.sort
        if sort_by == 'date'
          a.button(href='?sortby=like') Pong 순으로 정렬하기
        else
          a.button(href='?sortby=date') 날짜 순으로 정렬하기
      include statements
      div.leftcolumn
        div.caption 최근 발언
        div.statement(topic='정몽준')
          mixin statements('left', '정몽준', left_events)

      div.rightcolumn
        div.caption 최근 발언
        div.statement(topic='박원순')
          mixin statements('right', '박원순', right_events)
      div.clear

    div#pledges
      div.leftcolumn
        div.caption 주요 공약
      div.rightcolumn
        div.caption 주요 공약
      div.clear
      include pledges
      div.leftcolumn.notice
        ※ 이 후보의 공식
        a(href='/data/20140522182149209_1.pdf', target='_blank') 선거공보
        ,
        a(href='/data/20140523215934211_1.pdf', target='_blank') 5대 공약집
        ,
        a(href='/data/20140522182203315_1.pdf', target='_blank') 공약집
        보기
      div.rightcolumn.notice
        ※ 이 후보의 공식
        a(href='/data/20140522182236297_1.pdf', target='_blank') 선거공보
        ,
        a(href='/data/20140522155612193_1.pdf', target='_blank') 5대 공약집
        ,
        a(href='/data/20140522182246093_1.pdf', target='_blank') 공약집
        보기

div#params(style='display: none;')
  input(type='hidden', name='event_id', value=event_id)

div#floating
  div#tooltip-pong.rounded-corner5(style='display:none;')
    strong 관심
    &nbsp;가는 글이라면?
    strong PONG
    을 클릭해 SCORE를 올려 주세요!
  div#menu.rounded-corner5(style='display:none;')
    ul
      a(href='http://popong.com', target='_blank')
        li.button-bright.rounded-corner5 About us
      div.separator
      a(href='#profiles')
        li.rounded-corner5 프로필
      a(href='#statements')
        li.rounded-corner5 최근 발언
      a(href='#pledges')
        li.rounded-corner5 주요 공약

